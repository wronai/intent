# =============================================================================
# IntentForge - Complete Configuration
# Copy to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=change-this-to-secure-random-string
APP_URL=http://localhost:8000
ADMIN_EMAIL=admin@example.com

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:password@localhost:5432/intentforge

# Or individual settings:
DB_DRIVER=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=intentforge

# -----------------------------------------------------------------------------
# MQTT Broker
# -----------------------------------------------------------------------------
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_WS_PORT=9001
MQTT_USER=
MQTT_PASSWORD=

# -----------------------------------------------------------------------------
# Redis (Cache)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Email (SMTP)
# -----------------------------------------------------------------------------
# Gmail example:
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com

# Or other providers:
# SMTP_HOST=smtp.sendgrid.net
# SMTP_USER=apikey
# SMTP_PASSWORD=your-sendgrid-api-key

# -----------------------------------------------------------------------------
# PayPal
# -----------------------------------------------------------------------------
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_SECRET=your-paypal-secret

# Production:
# PAYPAL_MODE=live

# -----------------------------------------------------------------------------
# Stripe
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# -----------------------------------------------------------------------------
# Przelewy24
# -----------------------------------------------------------------------------
P24_MERCHANT_ID=your_merchant_id
P24_POS_ID=your_pos_id
P24_CRC=your_crc_key

# -----------------------------------------------------------------------------
# LLM (Anthropic Claude)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=sk-ant-your-api-key
LLM_MODEL=claude-sonnet-4-5-20250929
LLM_MAX_TOKENS=4096

# -----------------------------------------------------------------------------
# Weather API (OpenWeather)
# -----------------------------------------------------------------------------
OPENWEATHER_API_KEY=your-openweather-api-key

# -----------------------------------------------------------------------------
# Camera / Computer Vision
# -----------------------------------------------------------------------------
OPENCV_DNN_PATH=./models
RTSP_TIMEOUT=10

# Default camera sources (optional)
CAMERA_FRONT_DOOR=rtsp://192.168.1.100:554/stream1
CAMERA_BACK_YARD=rtsp://192.168.1.101:554/stream1
CAMERA_GARAGE=rtsp://192.168.1.102:554/stream1

# -----------------------------------------------------------------------------
# Storage
# -----------------------------------------------------------------------------
UPLOAD_PATH=./uploads
MAX_UPLOAD_SIZE=10485760

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:8000
RATE_LIMIT=60
SANDBOX_MODE=true

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/intentforge.log
